ol.home
  li.find 
    strong Find 
    | documents tagged on topics that you are interested in, generated by researchers like you
  
  li.contribute 
    strong Contribute 
    | to the knowledge database by tagging documents you feel are relevant

  li.connect 
    strong Connect 
    | with other people also interested in your area

form.box.home(method="post", action="/")
  label What do you want to research?
  input#research-area-input.required(type="text", name="research[area]")
  input.btn.btn-action.btn-blue(type="submit", value="Go")

div#isHome(style="display:none;")

#current-research-container
script#current-research-template(style='display: none;', type="text/x-mustache")
  h2 Subjects being researched *right now*
  ol
    | {{#results}}
    li.box
      a(href='/research/{{name}}') {{name}} ({{number}} people)
    | {{/results}}